                    <Label text="Room D" styleClass="room-title" />

                    <HBox alignment="CENTER" spacing="5">
                        <Label fx:id="priceLabelD" text="Price Per Night: R1200 " />
                        <TextField fx:id="priceTextFieldD" visible="false" managed="false" onKeyPressed="#priceTextFieldOnEnter"/>
                        <ImageView fx:id="priceIconD" fitWidth="16" fitHeight="16" preserveRatio="true" pickOnBounds="true"
