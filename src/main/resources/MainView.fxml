                        <TextField fx:id="priceTextFieldC" visible="false" managed="false" onKeyPressed="#priceTextFieldOnEnter"/>
                        <ImageView fx:id="priceIconC" fitWidth="16" fitHeight="16" preserveRatio="true" pickOnBounds="true"
