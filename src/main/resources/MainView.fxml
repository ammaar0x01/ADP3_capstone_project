                        </ImageView>
                    </HBox>

                    <HBox alignment="CENTER" spacing="5">
                        <Label fx:id="typeLabelC" text="Room Type: Standard " />
                        <TextField fx:id="typeTextFieldC" visible="false" managed="false" onKeyPressed="#typeTextFieldOnEnter" />
                        <ImageView fx:id="typeIconC" fitWidth="16" fitHeight="16" preserveRatio="true" pickOnBounds="true"
