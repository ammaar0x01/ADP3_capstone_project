                        <TextField fx:id="featuresTextFieldD" visible="false" managed="false" onKeyPressed="#featuresTextFieldOnEnter" />
                        <ImageView fx:id="featuresIconD" fitWidth="16" fitHeight="16" preserveRatio="true" pickOnBounds="true"
