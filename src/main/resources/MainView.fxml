<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.college.controller.RoomController">

    <children>
        <GridPane layoutX="0" layoutY="0" prefHeight="400.0" prefWidth="600.0"
                  AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">

            <columnConstraints>
                <ColumnConstraints percentWidth="50.0" />
                <ColumnConstraints percentWidth="50.0" />
            </columnConstraints>

            <rowConstraints>
                <RowConstraints percentHeight="50.0" />
                <RowConstraints percentHeight="50.0" />
            </rowConstraints>

            <children>

                <!-- Card 1 -->
                <VBox alignment="CENTER" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0">

                    <ImageView fitWidth="200" fitHeight="150" preserveRatio="false">
                        <image>
                            <Image url="@/rooms/a.jpg" />
                        </image>
                        <effect>
                            <DropShadow color="black" radius="10" offsetX="3" offsetY="3"/>
                        </effect>
                    </ImageView>

                    <Label text="Room A" styleClass="room-title" />

                    <!-- Price -->
                    <HBox alignment="CENTER" spacing="5">
                        <Label fx:id="priceLabelA" text="Price Per Night: R2000 " />
                        <TextField fx:id="priceTextFieldA" visible="false" managed="false" onKeyPressed="#priceTextFieldOnEnter"/>
                        <ImageView fx:id="priceIconA" fitWidth="16" fitHeight="16" preserveRatio="true" pickOnBounds="true"
                                   visible="true" onMouseClicked="#editPrice">
                            <image>
                                <Image url="@/icons/green.png" />
                            </image>
                        </ImageView>
                    </HBox>

                    <!-- Room Type -->
                    <HBox alignment="CENTER" spacing="5">
                        <Label fx:id="typeLabelA" text="Room Type: VIP " />
                        <TextField fx:id="typeTextFieldA" visible="false" managed="false" onKeyPressed="#typeTextFieldOnEnter" />
                        <ImageView fx:id="typeIconA" fitWidth="16" fitHeight="16" preserveRatio="true" pickOnBounds="true"
                                   visible="true" onMouseClicked="#editType">
                            <image>
                                <Image url="@/icons/green.png" />
                            </image>
                        </ImageView>
                    </HBox>

                    <!-- Availability -->
                    <HBox alignment="CENTER" spacing="5">
                        <Label fx:id="availabilityLabelA" text="Availability: Yes" />
                        <TextField fx:id="availabilityTextFieldA" visible="false" managed="false" onKeyPressed="#availabilityTextFieldOnEnter" />
                        <ImageView fx:id="availabilityIconA" fitWidth="16" fitHeight="16" preserveRatio="true" pickOnBounds="true"
                                   visible="true" onMouseClicked="#editAvailability">
                            <image>
                                <Image url="@/icons/green.png" />
                            </image>
                        </ImageView>
                    </HBox>

                    <!-- Features -->
                    <HBox alignment="CENTER" spacing="5">
                        <Label fx:id="featuresLabelA" text="Features: WiFi, TV, Room service " />
                        <TextField fx:id="featuresTextFieldA" visible="false" managed="false" onKeyPressed="#featuresTextFieldOnEnter" />
                        <ImageView fx:id="featuresIconA" fitWidth="16" fitHeight="16" preserveRatio="true" pickOnBounds="true"
                                   visible="true" onMouseClicked="#editFeatures">
                            <image>
                                <Image url="@/icons/green.png" />
                            </image>
                        </ImageView>
                    </HBox>

                    <Button fx:id="buttonA" styleClass="button" mnemonicParsing="false" onAction="#handleBookClick" text="Add Room" />
                </VBox>

                <!-- Card 2 -->
                <VBox alignment="CENTER" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
