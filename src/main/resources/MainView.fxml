                        <TextField fx:id="typeTextFieldB" visible="false" managed="false" onKeyPressed="#typeTextFieldOnEnter" />
                        <ImageView fx:id="typeIconB" fitWidth="16" fitHeight="16" preserveRatio="true" pickOnBounds="true"
