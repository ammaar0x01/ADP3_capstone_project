                    </HBox>

                    <HBox alignment="CENTER" spacing="5">
                        <Label fx:id="typeLabelD" text="Room Type: Economy " />
                        <TextField fx:id="typeTextFieldD" visible="false" managed="false" onKeyPressed="#typeTextFieldOnEnter" />
                        <ImageView fx:id="typeIconD" fitWidth="16" fitHeight="16" preserveRatio="true" pickOnBounds="true"
                                   visible="true" onMouseClicked="#editType">
                            <image>
                                <Image url="@/icons/green.png" />
                            </image>
                        </ImageView>
                    </HBox>

                    <HBox alignment="CENTER" spacing="5">
                        <Label fx:id="availabilityLabelD" text="Availability: Yes" />
                        <TextField fx:id="availabilityTextFieldD" visible="false" managed="false" onKeyPressed="#availabilityTextFieldOnEnter" />
                        <ImageView fx:id="availabilityIconD" fitWidth="16" fitHeight="16" preserveRatio="true" pickOnBounds="true"
                                   visible="true" onMouseClicked="#editAvailability">
                            <image>
