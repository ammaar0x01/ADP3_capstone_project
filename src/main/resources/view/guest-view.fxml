<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.college.controller.GuestUIController"
      spacing="10" alignment="TOP_CENTER">

    <!-- Proper padding -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Guest Management" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <HBox spacing="10">
        <Button text="Add Guest" onAction="#handleAddGuest"/>
        <Button text="Edit Guest" onAction="#handleEditGuest"/>
        <Button text="Delete Guest" onAction="#handleDeleteGuest"/>
    </HBox>

    <TableView fx:id="guestTable" prefHeight="500" prefWidth="850">
        <columns>
            <TableColumn fx:id="colGuestID" text="Guest ID" prefWidth="80"/>
            <TableColumn fx:id="colName" text="Name" prefWidth="120"/>
            <TableColumn fx:id="colSurname" text="Surname" prefWidth="120"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
            <TableColumn fx:id="colContact" text="Contact Number" prefWidth="150"/>
        </columns>
    </TableView>

</VBox>

