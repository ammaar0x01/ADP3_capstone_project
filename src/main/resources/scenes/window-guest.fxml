<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<!--            xmlns="http://javafx.com/javafx/24.0.1"-->

<AnchorPane prefHeight="600.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.college.controller.GuestUIController" style="-fx-font-family: 'Roboto', 'Helvetica', 'Arial', sans-serif">

    <!-- Heading -->
    <Label text="Guests" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-background-color: #26AD00;-fx-text-fill: white;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" layoutY="20.0" alignment="CENTER" />

    <!-- Table -->
    <TableView fx:id="guestTable" layoutX="40.0" layoutY="70.0"
               prefHeight="350.0" prefWidth="920.0">
        <columns>
            <TableColumn fx:id="colGuestID" prefWidth="60" text="ID" />
            <TableColumn fx:id="colName" prefWidth="150" text="Name" />
            <TableColumn fx:id="colSurname" prefWidth="150" text="Surname" />
            <TableColumn fx:id="colEmail" prefWidth="200" text="Email" />
            <TableColumn fx:id="colContact" prefWidth="150" text="Contact" />
            <TableColumn fx:id="colPayment" prefWidth="200" text="Payment Details" />
        </columns>
    </TableView>

    <!-- Buttons -->
    <Button layoutX="666.0" layoutY="470.0"
            onAction="#handleDeleteGuest"
            prefHeight="40.0" prefWidth="150.0"
            style="-fx-background-color: #C20010;"
            text="Delete Guest" textFill="WHITE" />

    <Button layoutX="435.0" layoutY="470.0"
            onAction="#handleEditGuest"
            prefHeight="40.0" prefWidth="150.0"
            style="-fx-background-color: #26AD00;"
            text="Edit Guest" textFill="WHITE" styleClass="button"/>

    <Button layoutX="210.0" layoutY="470.0"
            onAction="#handleAddGuest"
            prefHeight="40.0" prefWidth="150.0"
            style="-fx-background-color: #26AD00;"
            text="Add Guest" textFill="WHITE" styleClass="button" />

</AnchorPane>
