<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane minHeight="600.0" minWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.college.controller.ReservationUIController" style="-fx-font-family: 'Roboto', 'Helvetica', 'Arial', sans-serif">
<!--            fx:controller="com.college.controller.ReservationController">-->

   <children>
      <VBox prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: white;">
         <children>
            <Label alignment="CENTER" prefHeight="55.0" prefWidth="1000.0" text="Reservations" style="-fx-background-color: #26AD00;-fx-text-fill: white;" >
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="10.0" right="10.0" top="20.0" />
               </VBox.margin>
            </Label>
            <ScrollPane prefHeight="400.0" prefWidth="943.0">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="299.0" prefWidth="289.0">
                     <children>
                        <TableView fx:id="reservationTable" prefHeight="362.0" prefWidth="969.0" stylesheets="@/css/table.css">
                          <columns>
                            <TableColumn fx:id="reservationIdColumn" editable="false" maxWidth="100.0" minWidth="70.0" prefWidth="100.0" text="Id" />
                            <TableColumn fx:id="startTimeColumn" maxWidth="500.0" minWidth="200.0" prefWidth="450.0" text="Start time" />
                              <TableColumn fx:id="endTimeColumn" maxWidth="500.0" minWidth="200.0" prefWidth="450.0" text="End time" />
                          </columns>
                        </TableView>
                     </children>
                  </AnchorPane>
              </content>
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" />
               </VBox.margin>
            </ScrollPane>
            <HBox alignment="CENTER" prefHeight="70.0" prefWidth="963.0">
               <children>
                  <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#add" prefHeight="40.0" prefWidth="150.0" text="Add" styleClass="button">
                     <padding>
                        <Insets bottom="8.0" left="20.0" right="20.0" top="8.0" />
                     </padding>
                     <HBox.margin>
                        <Insets bottom="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                     <font>
                        <Font size="14.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="btnEdit" mnemonicParsing="false" onAction="#update" prefHeight="40.0" prefWidth="150.0" text="Edit" styleClass="button">
                     <padding>
                        <Insets bottom="8.0" left="20.0" right="20.0" top="8.0" />
                     </padding>
                     <font>
                        <Font size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#delete" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #C20010;" text="Delete" textFill="WHITE">
                     <padding>
                        <Insets bottom="8.0" left="20.0" right="20.0" top="8.0" />
                     </padding>
                     <font>
                        <Font size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </HBox>
            <Label fx:id="labelFeedback" alignment="CENTER" contentDisplay="CENTER" prefHeight="37.0" prefWidth="300.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="20.0" left="350.0" top="10.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </children>
</AnchorPane>
